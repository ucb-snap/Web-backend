-#  This file is app/views/user/index.html.haml
%h1 All Users

%table{:class => "table table-hover"}
  %thead
    %tr
      %th Username
      %th Email
      %th Followers
      %th Following
      %th More info
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.followers.count
        %td= user.following.count
        %td= link_to "More about #{user.username}", user_path(user)
