-# in app/views/snapusers/show.html.haml

%h2 Details about #{@user.username}

%ul#details
  %li
    email:
    = @user.email
  %li
    account type:
    = @user.account_type
  %li
    My Teaching Classes:
    = link_to 'View Classes', my_teaching_classes_path
  %li
    My Taking Classes:
    = link_to 'View Classes', my_taking_classes_path
  %li
    All Classes:
    = link_to 'View Classes', all_classes_path
- if @user == current_snapuser
  = link_to 'Edit', edit_snapuser_registration_path
  = link_to 'Create project', new_snapproject_path
  - if @user.account_type == 'Teacher'
    = link_to 'Create a new class', new_snapclass_path
  = button_to 'Delete', snapuser_path(@user), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to User list', snapuser_index_path
